{
  "name": "microfrontend-base",
  "version": "1.0.0",
"author": "Jos√© Alberto Ruiz <jalb80@gmail.com> (https://jaruiz.io)",
  "scripts": {
    "ng": "ng",
    "mocks-server": "json-server --routes mocks/routes.json --port 3000 --watch mocks/api-mock.json &",
    "stop-mocks-server": "kill -9 $(lsof -nP -i 4TCP:3000 |awk 'NR > 1 {print $2}')",
    "start": "npm run mocks-server && ng serve --port 4200",
    "build:prod": "ng build --prod --output-hashing=none --single-bundle",
    "build": "ng build --output-hashing=none --single-bundle",
    "test": "npm run build && cd dist/microfrontend-base && npx static-server",
    "start-container": "sh start-container.sh",
    "stop-container": "sh stop-container.sh",
    "expose": "npm run start-container && npm run mocks-server",
    "compodoc": "npx compodoc -p tsconfig.app.json src",
    "compodoc-serve": "compodoc -s",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular-extensions/elements": "^10.0.2",
    "@angular/common": "~10.1.0",
    "@angular/compiler": "~10.1.0",
    "@angular/core": "~10.1.0",
    "@angular/elements": "^10.1.0",
    "@angular/flex-layout": "^10.0.0-beta.32",
    "@angular/platform-browser": "~10.1.0",
    "@angular/platform-browser-dynamic": "~10.1.0",
    "@ng-bootstrap/ng-bootstrap": "~7.0.0",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "@popperjs/core": "^2.4.4",
    "@auth0/angular-jwt": "^5.0.1",
    "bootstrap": "^4.5.2",
    "jquery": "^3.5.1",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1002.0",
    "@angular/cli": "~10.1.0",
    "@angular/compiler-cli": "~10.1.0",
    "@compodoc/compodoc": "^1.1.11",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "json-server": "^0.16.1",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ngx-build-plus": "^10.1.1",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
