{
  "name": "shortcuts-panel",
  "version": "1.0.0",
"author": "Jos√© Alberto Ruiz <jalb80@gmail.com> (https://jaruiz.io)",
  "description": "Shortcuts for four elements",
  "main": "shortcuts-panel.js",
  "module": "shortcuts-panel.js",
  "type": "module",
  "scripts": {
    "copy-assets": "cpy './assets/**/*' '../dev/build' --cwd=src --parents",
    "build": "rimraf dev/build && tsc && npm run copy-assets",
    "build:prod": "npm run build && rimraf rm -rf dist && rollup -c rollup.config.js",
    "build:watch": "rimraf dev/build && tsc --watch &",
    "start": "npm run build:watch && npm run copy-assets && es-dev-server --node-resolve --app-index dev/index.html --open --watch",
    "clean": "rimraf dev/build && rimraf dist",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/* --write",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:clean": "rimraf dev/build/docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file dev/build/docs/shortcuts-panel.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css dev/build/docs/",
    "docs:serve": "es-dev-server --root-dir=dev/build/docs --node-resolve --watch",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile dev/build/docs/custom-elements.json",
    "test": "karma start karma.conf.cjs",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js",
    "expose": "cd build && npx static-server",
    "s3-delete-js": "aws s3  rm s3://jalb80-microfrontends-bucket/uicomponents/shortcuts-panel/v1 --recursive",
    "s3-delete-assets": "aws s3  rm s3://jalb80-microfrontends-bucket/assets/uicomponents/shortcuts-panel/v1 --recursive",
    "s3-upload-js": "aws s3  cp dist/v1/shortcuts-panel s3://jalb80-microfrontends-bucket/uicomponents/shortcuts-panel/v1 --recursive --exclude 'assets/*'",
    "s3-upload-assets": "aws s3  cp dist/v1/shortcuts-panel/assets/uicomponents s3://jalb80-microfrontends-bucket/assets/uicomponents --recursive",
    "s3-delete": "npm run s3-delete-assets && npm run s3-delete-js",
    "s3-upload": "npm run s3-upload-assets && npm run s3-upload-js",
    "publish": "npm run s3-delete && npm run s3-upload"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@material/mwc-icon": "^0.18.0",
    "bootstrap-icons": "^1.0.0",
    "lit-element": "^2.3.1",
    "lit-translate": "^1.2.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@open-wc/testing": "^2.5.10",
    "@open-wc/testing-karma": "^4.0.6",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "chai": "^4.2.0",
    "copy-assets": "^1.0.2",
    "cpy-cli": "^3.1.1",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.46.1",
    "eslint": "^6.8.0",
    "karma": "^5.2.3",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^2.0.1",
    "lit-analyzer": "^1.1.10",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-filesize": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^3.8.3",
    "web-component-analyzer": "^1.0.3"
  }
}
